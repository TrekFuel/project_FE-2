<div class="col mt-3 single-news" data-index="{{id}}">
  <div class="card">
    <img src="{{image.large}}"
         class="rounded mx-auto d-block mt-3"
         width="480"
         height="300"
         alt="{{title}}"
         title="{{title}}"/>
    <div class="card-body">
      <h5 class="card-title text-center font-weight-bold">
        {{title}}
      </h5>
      <p class="card-text">
        {{text}}
      </p>
      <p class="text-muted">категория: {{features.newsCategory}}; дата выхода:
        {{features.newsDate}}; активность: {{features.newsActivity}};
        рейтинг: {{features.newsRating}}</p>
    </div>
    <button type="button"
            class="btn-primary btn-sm ml-3 mb-3 container-button back"
            data-index="{{id}}">
      На главную
    </button>
  </div>
</div>
